@using MusicPlayer.Models.ViewModels.Playlist
@model DeletePlaylistViewModel


@{
    ViewData["Title"] = "Delete";
}
<div class="row">
    <div class="col-md-12 offset-2">
        <div class="row">
            <div class="col-md-8">
                <a class="btn btn-danger btn-sm" id="DeleteButton" asp-controller="Playlist" asp-action="DeletePlaylist" asp-route-id="@Model.PlaylistIdToDelete">Yes</a>
                <a class="btn btn-secondary float-end btn-sm" asp-controller="Playlist" asp-action="Index">Cancel</a>
            </div>
        </div>
    </div>
</div>

