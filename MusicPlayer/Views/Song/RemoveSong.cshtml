@using MusicPlayer.Models.ViewModels.SongViewModel
@model RemoveSongViewModel


@{
    ViewData["Title"] = "Remove";
}
<div class="row">
    <div class="col-md-12 offset-2">
        <div class="col-md-8">
            <a class="btn btn-danger btn-sm" id="DeleteButton" asp-controller="Song" asp-action="RemoveSongFromPlaylist" asp-route-playlistId="@Model.PlaylistId" asp-route-sourceId="@Model.SourceId">Yes</a>
            <a class="btn btn-outline-secondary float-end btn-sm" asp-controller="Song" asp-action="Index" asp-route-id="@Model.PlaylistId">Cancel</a>
        </div>
    </div>
</div>
